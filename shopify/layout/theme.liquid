<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>{{ page_title | escape }}</title>
    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}
    {% comment %} {% if settings.favicon %}
      <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
    {% endif %} {% endcomment %}
    <link rel="icon" href="data:,">
    {{ 'bundle.css' | asset_url | stylesheet_tag }}
    {% render 'fonts' %}
    {{ content_for_header }}
  </head>
  <body x-data x-init="
    fetch('/cart.js')
      .then(res => res.json())
      .then(data => $store.cart.cart = data);
  " 
  x-cloak>
    <div id="app">
      <div x-data>
      <!-- TOAST -->
      <div 
      x-show="$store.toast.show"
      x-text="$store.toast.message"
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 translate-y-4"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-300"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 translate-y-4"
      x-cloak
      class="fixed bottom-6 left-6 bg-black text-white text-sm px-5 py-3 rounded-lg shadow-xl z-[9999]"
    >
    </div>
    </div>
      {% section 'header' %}
      <main id="main" role="main">
        {{ content_for_layout }}
      </main>
      {% render 'drawer' %}
      {% section 'footer' %}
    </div>
    <script src="{{ 'bundle.js' | asset_url }}" defer></script>
  </body>
</html>