<nav>
  <div class="flex flex-wrap gap-2 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
    {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" class="button button--text">
          {{ link.title | escape }}
          <img src="{{ 'arrow_outward.static.svg' | asset_url }}" alt="icone flèche" class="w-6 h-6" width="24" height="24">
        </a>
        {% if link.levels >= 1 %}
            {% for sub_link in link.links %}
                <a href="{{ sub_link.url }}">
                  {{ sub_link.title | escape }}
                  <img src="{{ 'arrow_outward.static.svg' | asset_url }}" alt="icone flèche" class="w-6 h-6" width="24" height="24">
                </a>
            {% endfor %}
        {% endif %}
    {% endfor %}
  </div>
</nav>